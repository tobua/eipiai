{
  "name": "eipiai",
  "description": "The simplest way to connect a client to a server while bypassing any HTTP features designed for server-side rendering.",
  "version": "0.0.0-development",
  "repository": "github:tobua/eipiai",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "check": "biome check --write .",
    "types": "tsc && tsc --noEmit --project ./test/tsconfig.json"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "elysia": "^1.2.6",
    "typescript": "^5.7.2",
    "zero-configuration": "^0.17.6"
  },
  "peerDependencies": {
    "elysia": ">= 1"
  },
  "peerDependenciesMeta": {
    "elysia": {
      "optional": true
    }
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./elysia": "./elysia.ts",
    "./vercel": "./vercel.ts",
    "./socket": "./socket.ts"
  },
  "files": [
    "*.ts"
  ],
  "keywords": [
    "api",
    "rpc"
  ],
  "publishConfig": {
    "provenance": true
  },
  "configuration": {
    "gitignore": "recommended",
    "vscode": "biome",
    "license": "MIT",
    "biome": {
      "extends": "recommended",
      "linter": {
        "rules": {
          "correctness": {
            "noNodejsModules": "off"
          },
          "suspicious": {
            "noConsoleLog": "off",
            "noConsole": "off",
            "noExplicitAny": "off"
          }
        }
      },
      "files": {
        "ignore": [
          "demo"
        ]
      }
    },
    "typescript": [
      {
        "extends": "plugin",
        "files": [
          "index.ts"
        ]
      },
      {
        "extends": "../tsconfig.json",
        "folder": "test",
        "compilerOptions": {
          "strict": false
        }
      }
    ]
  }
}
