{
  "name": "eipiai",
  "description": "The simplest way to connect a client to a server while bypassing any HTTP features designed for server-side rendering.",
  "version": "0.0.0-development",
  "repository": "github:tobua/eipiai",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "check": "biome check --write .",
    "types": "tsc && tsc --project ./test/tsconfig.json"
  },
  "dependencies": {
    "early-return": "^0.3.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/bun": "^1.2.19",
    "elysia": "^1.3.8",
    "ts-expect": "^1.3.0",
    "typescript": "^5.9.2",
    "zero-configuration": "^1.0.5"
  },
  "peerDependencies": {
    "elysia": ">= 1"
  },
  "peerDependenciesMeta": {
    "elysia": {
      "optional": true
    }
  },
  "trustedDependencies": [
    "zero-configuration"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./index.ts",
  "exports": {
    ".": "./index.ts",
    "./elysia": "./elysia.ts",
    "./vercel": "./vercel.ts",
    "./socket": "./socket.ts"
  },
  "files": [
    "*.ts"
  ],
  "keywords": [
    "api",
    "rpc"
  ],
  "publishConfig": {
    "provenance": true
  },
  "configuration": {
    "gitignore": "recommended",
    "vscode": "biome",
    "license": "MIT",
    "biome": [
      {
        "extends": "recommended",
        "linter": {
          "rules": {
            "correctness": {
              "noNodejsModules": "off"
            },
            "suspicious": {
              "noConsole": "off",
              "noExplicitAny": "off"
            }
          }
        },
        "files": {
          "includes": [
            "**/*",
            "!demo"
          ]
        }
      },
      {
        "folder": "test",
        "extends": "test",
        "root": false
      }
    ],
    "typescript": [
      {
        "extends": "plugin",
        "files": [
          "index.ts"
        ]
      },
      {
        "extends": "../tsconfig.json",
        "folder": "test",
        "compilerOptions": {
          "strict": false
        },
        "include": [
          "*.test.ts"
        ]
      }
    ]
  }
}
